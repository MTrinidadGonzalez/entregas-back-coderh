<div class="productsContainer">
    {{#each products}}
    <div class="productCard">
        <img src={{this.img}} alt={{this.description}}>
        <p>Description: {{this.description}} </p>
         <p>Color:{{this.color}} </p>
        <p>Talle: {{this.talle}}</p>
        <p>Price: $ {{this.price}} </p>
         <p>Dueño:{{this.owner}} </p>  
        <button id="btn-subtract-product" class="btn-subtract-product">-</button>
        <span id="spam-quantity" class="spam-quantity">1</span>
        <button id="btn-add-more-product" class="btn-add-more-product"  data-stock="{{this.stock}}">+</button>
        <button class="btnCard"  data-product-id="{{this._id}}" >Add to cart</button>
    </div>
    {{/each}}
</div>


